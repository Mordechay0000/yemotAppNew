<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/preferences_header">

        <ListPreference
            app:defaultValue="default"
            app:entries="@array/language_entries"
            app:entryValues="@array/language_values"
            app:key="language"
            app:title="@string/language_title"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

    <PreferenceCategory app:title="@string/ask">


        <SwitchPreferenceCompat
            app:key="delete"
            app:title="@string/delete"
            app:defaultValue="true"/>
        <SwitchPreferenceCompat
            app:key="paste"
            app:title="@string/paste_later_copy_move"/>
        <SwitchPreferenceCompat
            app:key="logout"
            app:title="@string/logout"/>
    </PreferenceCategory>

</PreferenceScreen>